#!/bin/bash
rsync -a --delete . /tmp/act
cd /tmp/act
git reset --hard
git clean -fd
export FORCE_PLAYBACK=1
export CUCUMBER_FORMAT="progress"
if bundle exec cucumber && bundle exec rake teaspoon && bundle exec rspec; then
  unset FORCE_PLAYBACK
  git push -f && say 'hochgeschoben'
else
  say 'test fehlgeschlagen'
fi
unset FORCE_PLAYBACK

