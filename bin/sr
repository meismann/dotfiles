#!/bin/bash

case $# in
  1 )
    ag "$1"
  ;;
  2 )
    if [ -d "$2" ]
    then
      echo "Searching for '$1' in $2"
      ag "$1" "$2"
    else
      echo "Replacing '$1' with '$2' everywhere"
      ag "$1" --nogroup | awk '{print substr($1,1,index($1,":")-1);}' | xargs -I {} sed -i '' -e "s/$1/$2/g" {}
    fi
  ;;
  3 )
    echo "Replacing '$1' with '$3' in $2"
      ag "$1" --nogroup "$2" | awk '{print substr($1,1,index($1,":")-1);}' | xargs -I {} sed -i '' -e "s/$1/$2/g" {}
  ;;
  *)
    echo "Eingabe so:"
    echo "sr search_string"
    echo "sr search_string [search_dir|replace_string]"
    echo "sr search_string search_dir replace_string"
  ;;
esac
