#!/bin/bash
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
rvm use default;
current=$(rvm current);
echo "Upgrading from $current to $1 like so:"
echo "- removing old gem versions"
yes y | gem cleanup
echo "- performing the actual upgrade"
rvm upgrade $current ruby-$1 --force && \
  echo "- creating aliases »default« and »$1«" && \
  rvm alias create $1 ruby-$1 && \
  rvm alias create default ruby-$1 && \
  echo "- run bundle install in Act-api, Cortex, Forecast, iwfm-api, iwfm-wine and queue-contex-api to install still needed gems deleted by running »gem cleanup«" && \
  cd $HOME/werkbank/act-api && bundle && \
  cd $HOME/werkbank/cortex && bundle && \
  cd $HOME/werkbank/forecast && bundle && \
  cd $HOME/werkbank/iwfm-api && bundle && \
  cd $HOME/werkbank/iwfm-wine && bundle && \
  cd $HOME/werkbank/queue-context-api && bundle && \
  echo "… done."

