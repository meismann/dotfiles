[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
	excludesfile = ~/.gitignore
	editor = vim
	filemode = false
[user]
	email = softwerk@eismann.cc
	name = Martin Eismann
[branch]
	autosetuprebase = always
[pull]
	rebase = true
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[push]
	default = current
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.2.2/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
  a = add
  aa = add -A
  alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
  # list branches sorted by last modified
  b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"
  bb = bisect bad
  bg = bisect good
  bk = bisect skip
  br = bisect reset
  bs = bisect start
  c = commit -m
  ca = commit -am
  cn = clean -f
  d = diff
  dh = diff HEAD
  f = fetch
  h = help
  l = log
  lo = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  m = merge
  mt = mergetool
  o = checkout
  ob = checkout -b
  om = checkout master
  # https://blog.andrewray.me/a-better-git-blame/
  p = log -p -M --follow --stat --
  pl = pull
  ps = push -u
  psf = push --force-with-lease
  r = rebase
  ri = rebase -i -
  rth = reset --hard
  s = status -s
  t = stash
  ta = stash apply
  tp = stash pop
  w = show
